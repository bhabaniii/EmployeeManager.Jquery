                    maxlength: 30
                },

                birthDate: "required",
                hireDate: "required",
                country: "required",
                notes: {
                    required: true,
                    maxlength: 500
                }
            },

            message: {

                firstName: "Invalid Frist Name",
                lastName: "Invalid Last Name",
                title: "Invalid Title",
                birthDate: "Invalid Birth Date",
                hireDate: "Invalid Hire Date",
                country: "Invalid Country",
                notes: "Invalid Notes"
            },

            errorClass: "message"

        });


